<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:id="@+id/white_space"></LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:clickable="false"
        android:id="@+id/first"
        android:gravity="center_vertical|center_horizontal">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/connect_logo"
            android:layout_above="@+id/connect_welcome"
            android:layout_centerHorizontal="true"
            android:background="@drawable/notifeed_logo256" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/second"
        android:layout_weight="0.2"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/connect_welcome_text"
            android:id="@+id/connect_welcome"
            android:textColor="@android:color/black"
            android:visibility="visible"
            android:autoText="false"
            android:layout_above="@+id/connect_welcome2"
            android:layout_centerHorizontal="true"
            android:textSize="32dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/connect_welcome_text2"
            android:id="@+id/connect_welcome2"
            android:textColor="@android:color/black"
            android:visibility="visible"
            android:autoText="false"
            android:textSize="32dp"
            android:layout_above="@+id/connect_center"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:id="@+id/third"
        android:gravity="center_vertical|center_horizontal">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/connect_login"
            android:hint="@string/connect_default_login"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:layout_below="@+id/connect_center"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:paddingRight="10dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/connect_password"
            android:password="false"
            android:hint="@string/connect_default_password"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:layout_below="@+id/connect_login"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:paddingRight="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connect_ok"
            android:id="@+id/connect_ok"
            android:gravity="center_vertical|center_horizontal"
            android:layout_below="@+id/connect_password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />
    </LinearLayout>

</LinearLayout>
