<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="android:actionMenuTextColor">@color/light_text</item>
        <item name="android:windowBackground">@color/app_background</item>

     <!--   <item name="android:alertDialogTheme">@style/AlertDialogCustomTheme</item> -->

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="actionMenuTextColor">@color/light_text</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/main_color</item>
        <item name="android:icon">@drawable/ic_launcher</item>

        <!-- Support library compatibility -->
        <item name="background">@color/main_color</item>
        <item name="icon">@drawable/ic_launcher</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/light_text</item>
    </style>

    <!-- ActionBar tabs text -->
    <style name="MyActionBarTabText"  parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/light_text</item>
    </style>

    <!-- Custom Alert Dialog -->
    <style name="AlertDialogCustomTheme" android:parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
